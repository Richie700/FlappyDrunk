<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flappy.drunk.MainActivity">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/buttonPlay"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="217dp"
        android:layout_alignStart="@+id/buttonHighScore"
        android:layout_alignEnd="@+id/buttonHighScore" />

    <Button
        android:id="@+id/buttonHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/buttonHighScore"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
