<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="flappy.drunk.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sprite_0"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/buttonPlay"
            android:layout_marginTop="25dp"
            android:id="@+id/imageView"
            android:layout_above="@+id/buttonPlay"
            android:layout_alignEnd="@+id/buttonPlay"
            android:layout_weight="0.62" />

        <TextView
            android:text="Wappu Madness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_above="@+id/buttonPlay"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="36sp"
            android:textColor="@color/colorWhite"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/buttonPlay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_centerVertical="true"
            android:text="@string/buttonPlay"
            android:layout_alignStart="@+id/buttonHighScore"
            android:layout_alignEnd="@+id/buttonHighScore"
            android:padding="10dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonHighScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/buttonHighScore"
            android:background="@drawable/button"
            android:layout_below="@+id/buttonPlay"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>
